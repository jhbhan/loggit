{
    "expo": {
        "name": "loggit",
        "slug": "loggit",
        "version": "1.0.0",
        "orientation": "portrait",
        "scheme": "loggit",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "supportsTablet": true
        },
        "android": {
            "adaptiveIcon": {
                "backgroundColor": "#ffffff"
            },
            "edgeToEdgeEnabled": true
        },
        "web": {
            "bundler": "metro",
            "output": "static"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/splash-icon.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#ffffff"
                }
            ],
            "@react-native-firebase/app",
            "@react-native-firebase/auth"
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}
